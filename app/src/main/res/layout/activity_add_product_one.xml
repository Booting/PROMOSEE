<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <!-- HEADER BAR -->
    <RelativeLayout android:id="@+id/relBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/header_bar_center" />
    </RelativeLayout>

    <!-- BODY -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5">

        <ImageView android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@drawable/header_one"/>

        <RelativeLayout android:id="@+id/relTakeInvoicePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.47"
            android:background="#ededed">
            <TextView android:id="@+id/lblTakeInvoicePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAKE INVOICE PHOTO"
                android:textColor="#464646"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"/>
            <ImageView android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/garansimu_icon_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <ImageView android:id="@+id/imgTakeInvoicePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <RelativeLayout android:id="@+id/linTakeInvoicePhoto"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="#80000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone">
                <ImageView android:id="@+id/imgRetakeOne"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/garansimu_icon_18_white"
                    android:layout_marginRight="5dp"/>
                <TextView android:id="@+id/lblRetakeOne"
                    android:layout_toRightOf="@+id/imgRetakeOne"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="RETAKE PHOTO"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/relTakeProductPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.47"
            android:background="#e3e3e3">
            <TextView android:id="@+id/lblTakeProductPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAKE PRODUCT PHOTO"
                android:textColor="#464646"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"/>
            <ImageView android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/garansimu_icon_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <ImageView android:id="@+id/imgTakeProductPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <RelativeLayout android:id="@+id/linTakeProductPhoto"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="#80000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone">
                <ImageView android:id="@+id/imgRetakeTwo"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/garansimu_icon_18_white"
                    android:layout_marginRight="5dp"/>
                <TextView android:id="@+id/lblRetakeTwo"
                    android:layout_toRightOf="@+id/imgRetakeTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="RETAKE PHOTO"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/relTakeWarrantyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.47"
            android:background="#dcdcdc">
            <TextView android:id="@+id/lblTakeWarrantyCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAKE WARRANTY CARD"
                android:textColor="#464646"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"/>
            <ImageView android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/garansimu_icon_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <ImageView android:id="@+id/imgTakeWarrantyCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
            <RelativeLayout android:id="@+id/linTakeWarrantyCard"
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:background="#80000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone">
                <ImageView android:id="@+id/imgRetakeThree"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/garansimu_icon_18_white"
                    android:layout_marginRight="7dp"/>
                <TextView android:id="@+id/lblRetakeThree"
                    android:layout_toRightOf="@+id/imgRetakeThree"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="RETAKE PHOTO"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView android:id="@+id/lblSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="SAVE"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:background="#27b6e0"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>

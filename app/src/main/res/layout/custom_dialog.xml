<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <ImageView android:id="@+id/imgClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/close"
        android:layout_margin="10dp"
        android:padding="10dp"/>

    <ImageView android:id="@+id/imgInfoBarcodeOne"
        android:layout_below="@+id/imgClose"
        android:layout_width="179dp"
        android:layout_height="133dp"
        android:background="@drawable/info_barcode_one"
        android:layout_marginLeft="20dp"/>

    <ImageView android:layout_below="@+id/imgInfoBarcodeOne"
        android:layout_width="315dp"
        android:layout_height="167dp"
        android:background="@drawable/info_barcode_two"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <TextView android:id="@+id/lblGotIt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#27b6e0"
        android:textSize="15sp"
        android:text="GOT IT!"
        android:gravity="center"
        android:textColor="#FFF"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

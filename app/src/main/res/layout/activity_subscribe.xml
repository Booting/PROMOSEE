<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#27b6e0">

    <!-- HEADER BAR -->
    <RelativeLayout android:id="@+id/relBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/header_bar_center" />
    </RelativeLayout>

    <!-- BODY -->
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout android:id="@+id/linSubscribeOne"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button_white"
                android:clickable="true"
                android:onClick="btnSubscribeOneClick">
                <TextView android:id="@+id/lblOne"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#464646"
                    android:textColor="#fff"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView android:id="@+id/txtOne"
                    android:layout_toRightOf="@+id/lblOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#464646"
                    android:text="FREE 5 images for 3 months"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"/>
                <ImageView android:id="@+id/imgOne"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/linSubscribeTwo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="15dp"
                android:clickable="true">
                <TextView android:id="@+id/lblTwo"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#464646"
                    android:textColor="#fff"
                    android:text="2"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView android:id="@+id/txtTwo"
                    android:layout_toRightOf="@+id/lblTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:text="PAKET BASIC"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView android:id="@+id/txtTwoDetail"
                    android:layout_toRightOf="@+id/lblTwo"
                    android:layout_below="@+id/txtTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:text="20 images / year"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"/>
                <TextView android:id="@+id/btnTwo"
                    android:layout_toRightOf="@+id/lblTwo"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_button_gray_four"
                    android:textColor="#464646"
                    android:text="Subscribe Now!"
                    android:textSize="13sp"
                    android:gravity="center"/>
                <ImageView android:id="@+id/imgTwo"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/linSubscribeThree"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="15dp"
                android:clickable="true">
                <TextView android:id="@+id/lblThree"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#464646"
                    android:textColor="#fff"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView android:id="@+id/txtThree"
                    android:layout_toRightOf="@+id/lblThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:text="PAKET PREMIUM"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>
                <TextView android:id="@+id/txtThreeDetail"
                    android:layout_toRightOf="@+id/lblThree"
                    android:layout_below="@+id/txtThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:text="50 images / year"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"/>
                <TextView android:id="@+id/btnThree"
                    android:layout_toRightOf="@+id/lblThree"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_button_gray_four"
                    android:textColor="#464646"
                    android:text="Subscribe Now!"
                    android:textSize="13sp"
                    android:gravity="center"/>
                <ImageView android:id="@+id/imgThree"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/linSubscribeFour"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button_white"
                android:layout_marginTop="15dp"
                android:clickable="true">
                <TextView android:id="@+id/lblFour"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#464646"
                    android:textColor="#fff"
                    android:text="4"
                    android:gravity="center"
                    android:textSize="16sp"/>
                <TextView android:id="@+id/txtFour"
                    android:layout_toRightOf="@+id/lblFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:text="PAKET CORPORATE"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"/>
                <TextView android:id="@+id/btnFour"
                    android:layout_toRightOf="@+id/lblFour"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_button_gray_four"
                    android:textColor="#464646"
                    android:text="COMING SOON"
                    android:textSize="13sp"
                    android:gravity="center"/>
                <ImageView android:id="@+id/imgFour"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/check"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

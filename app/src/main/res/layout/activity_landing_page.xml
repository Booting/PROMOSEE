<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    android:id="@+id/linParent">
    <ImageView android:id="@+id/imgLandingPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landingpage_one"
        android:layout_weight="1" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView android:id="@+id/txtOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="WELCOME!"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="#464646" />
        <TextView android:id="@+id/txtTwo"
            android:layout_below="@+id/txtOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Garansimu will manage and store your warranties securely"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:textColor="#464646" />
        <LinearLayout android:id="@+id/linRegisterAsUser"
            android:layout_below="@+id/txtTwo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_button_black"
            android:layout_marginTop="20dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone">
            <ImageView android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/account_star"/>
            <TextView android:id="@+id/txtRegisterAsUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Register"
                android:textAllCaps="true"
                android:layout_marginLeft="12dp"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout android:id="@+id/linRegisterAsPrinciple"
            android:layout_below="@+id/linRegisterAsUser"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_button_black"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:visibility="gone">
            <ImageView android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/account_star"
                android:layout_marginLeft="20dp" />
            <TextView android:id="@+id/txtRegisterAsPrinciple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Register as Brand Principle"
                android:layout_marginLeft="12dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <!-- BOTTOM BAR -->
        <RelativeLayout android:id="@+id/relBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <include layout="@layout/landingpage_bottombar" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
